# 로컬 환경 용 (HTTPS)
localhost {
    route /spring-dev/* {
        uri strip_prefix /spring-dev
        reverse_proxy spring_dev:8080
    }
    redir /spring-dev /spring-dev/

    route /backoffice/* {
        uri strip_prefix /backoffice
        reverse_proxy frontend_backoffice:80
    }
    redir /backoffice /backoffice/
}

# 개발 서버 배포 용 (HTTP)
http:// {
    route /spring-dev/* {
        uri strip_prefix /spring-dev
        reverse_proxy spring_dev:8080
    }
    redir /spring-dev /spring-dev/

    route /backoffice/* {
        uri strip_prefix /backoffice
        reverse_proxy frontend_backoffice:80
    }
    redir /backoffice /backoffice/
}
